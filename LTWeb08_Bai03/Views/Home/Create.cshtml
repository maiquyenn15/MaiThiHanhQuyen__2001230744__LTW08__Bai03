@model LTWeb08_Bai03.Models.tbl_Employee

@{
    ViewBag.Title = "Thêm mới nhân viên";
}

<h2 style="text-align:center;">THÊM MỚI NHÂN VIÊN</h2>

@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal" style="width:60%; margin:auto;">
    <hr />

    <!-- Tên nhân viên -->
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập tên nhân viên" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Giới tính (DropdownList Nam/Nữ) -->
    <div class="form-group">
        @Html.LabelFor(m => m.Gender, "Gender", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Gender,
                new SelectList(new[] { new { Value = "Nam", Text = "Nam" }, new { Value = "Nữ", Text = "Nữ" } }, "Value", "Text"),
                "-- Chọn giới tính --",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Thành phố -->
    <div class="form-group">
        @Html.LabelFor(m => m.City, "City", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "Nhập thành phố" })
            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Phòng ban (DropdownList lấy từ tbl_Deparment) -->
    <div class="form-group">
        @Html.LabelFor(m => m.DeptId, "DeptId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.DeptId, ViewBag.DeptId as SelectList, "-- Chọn phòng ban --", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DeptId, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Chọn ảnh -->
    <div class="form-group">
        <label class="control-label col-md-2">Image</label>
        <div class="col-md-10">
            <input type="file" name="ImageFile" class="form-control" />
        </div>
    </div>

    <!-- Nút Submit -->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default", @style = "margin-top:10px;" })
        </div>
    </div>
</div>
}