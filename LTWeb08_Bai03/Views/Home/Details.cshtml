@model LTWeb08_Bai03.Models.tbl_Employee

@{
    ViewBag.Title = "Chi tiết nhân viên";
}

<h2 style="text-align:center;">THÔNG TIN CHI TIẾT NHÂN VIÊN</h2>

<div class="row" style="margin-top:20px;">
    <!-- Cột bên trái: Hình ảnh -->
    <div class="col-md-4 text-center">
        <img src="@Url.Content("~/Content/Images/" + Model.Id + ".jpg")"
             alt="Ảnh nhân viên" width="120" height="120"
             class="img-thumbnail" />
        <div class="form-group">
            <label class="control-label"><b>Mã NV:</b> @Model.Id</label>
        </div>
    </div>

    <!-- Cột bên phải: Thông tin nhân viên -->
    <div class="col-md-8">
        <div class="form-group">
            <label class="control-label"><b>Họ Tên NV:</b> @Model.Name</label>
        </div>
        <div class="form-group">
            <label class="control-label"><b>Giới tính:</b> @Model.Gender</label>
        </div>
        <div class="form-group">
            <label class="control-label"><b>Thành phố:</b> @Model.City</label>
        </div>
        <div class="form-group">
            <label class="control-label"><b>Phòng ban:</b> @(Model.tbl_Deparment != null ? Model.tbl_Deparment.Name : "Không có phòng ban")</label>
        </div>
    </div>
</div>

<!-- Back to List -->
<div style="margin-top:20px;">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>